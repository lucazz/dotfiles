[core]
  editor = nvim
  autocrlf = input
  filemode = false
  whitespace = fix
  trustctime = false

[alias]
  a = add --all
  c = commit
  d = diff
  s = status -b
  log = log --oneline --decorate --all --graph
  graph = "!f() { git log --oneline --abbrev-commit --graph --decorate; }; f"
  undo = !git reset HEAD~1 --mixed
  amend = !git commit --amend --no-edit

[push]
  default = current

[color]
  ui = true
  status = true
  branch = true
  interactive = true

[color "diff"]
  meta = yellow
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse

[branch]
  autosetuprebase = always

[fetch]
  prune = true
  rebase = true

[gpg]
  program = /usr/bin/gpg

[pull]
  rebase = true
  default = current
  prune = true

[commit]
  gpgsign = true

[pager]
  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX

[diff-so-fancy]
  markEmptyLines = false
  changeHunkIndicators = false
  stripLeadingSymbols = false
  useUnicodeRuler = false
  noprefix = true

[diff "sopsdiffer"]
  textconv = sops -d

[user]
  name = Lucas do Amaral Saboya
  useConfigOnly = true
  signingkey = 1366C0C0
