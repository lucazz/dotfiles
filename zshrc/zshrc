export ZSH=$HOME/.oh-my-zsh

#ZSH_THEME="bureau-lucazz"
ZSH_THEME="node"

plugins=(docker docker-compose pip python vagrant)

source $ZSH/oh-my-zsh.sh
source $HOME/.dotfiles/credentials


if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR='nvim'
fi

alias vim="nvim"
alias pip-update="pip freeze --local | grep -v '^\-e' | cut -d = -f 1 | xargs -n1 pip install -U"

export AUTO_MOUNT_HOME=false
export GOPATH="/Users/Lucas/Projects/Golang"
export HOMEBREW_NO_ANALYTICS=1
export HOMEBREW_NO_INSECURE_REDIRECT=1
export PATH="/usr/local/sbin:$PATH"

function delete_local_merged_branches() {
  git branch --merged master | grep -v master | xargs git branch -d
}

#Auto jump
[ -f /usr/local/etc/profile.d/autojump.sh ] && . /usr/local/etc/profile.d/autojump.sh
