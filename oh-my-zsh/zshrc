export ZSH="$HOME/.oh-my-zsh"
export ZSH_CUSTOM="$HOME/.dotfiles/oh-my-zsh/zsh_custom"
plugins=()
# Add them wisely, as too many plugins slow down shell startup.
#___________________
# - Default plugins: '$ZSH/plugins/*' i.e. ~/.local/share/oh-my-zsh/plugins/*
#   See https://github.com/robbyrussell/oh-my-zsh/wiki/Plugins
plugins+=(direnv gitfast fzf aliases exports asdf autojump)
plugins+=(tmux)
plugins+=(docker terraform custom-kubectl)
ZSH_THEME="sorin"
HYPHEN_INSENSITIVE="true"
DISABLE_AUTO_TITLE="true"
ENABLE_CORRECTION="true"
COMPLETION_WAITING_DOTS="true"
ZSH_TMUX_AUTOSTART=true
ZSH_TMUX_AUTOSTART_ONCE=true
ZSH_TMUX_AUTOQUIT=true
ZSH_TMUX_AUTOCONNECT=true
source $ZSH/oh-my-zsh.sh
export MANPATH="/usr/local/man:$MANPATH"
. /usr/local/opt/asdf/asdf.sh
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
