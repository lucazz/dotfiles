export ZSH=$HOME/.oh-my-zsh

ZSH_THEME="lucazz"

plugins=(docker docker-compose)

source $ZSH/oh-my-zsh.sh
source $HOME/.dotfiles/credentials


if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR='nvim'
fi

alias vim="nvim"


export ANSIBLE_VAULT_PASSWORD_FILE="~/.ansible/vaultpw"
export ANSIBLE_CONFIG="~/.ansible/ansible.cfg"
export AUTO_MOUNT_HOME=false
export GOPATH="/Users/lucazz/Projects/Golang"
