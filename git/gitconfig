[core]
  autocrlf = input
  editor = nvim
  filemode = false
  trustctime = false
  whitespace = fix

[alias]
  a = add --all
  c = commit
  d = diff
  s = status -b
  amend = !git commit --amend --no-edit
  graph = "!f() { git log --oneline --abbrev-commit --graph --decorate; }; f"
  log = log --oneline --decorate --all --graph
  undo = !git reset HEAD~1 --mixed

[push]
  default = current

[color]
  branch = true
  interactive = true
  status = true
  ui = true

[color "diff"]
  commit = yellow bold
  frag = magenta bold
  meta = yellow
  new = green bold
  old = red bold
  whitespace = red reverse

[fetch]
  prune = true
  rebase = true

[gpg]
  program = /usr/local/MacGPG2/bin/gpg

[pull]
  default = current
  prune = true
  rebase = true

[commit]
  gpgsign = true

[pager]
  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX

[diff-so-fancy]
  changeHunkIndicators = false
  markEmptyLines = false
  noprefix = true
  stripLeadingSymbols = false
  useUnicodeRuler = false

[diff "sopsdiffer"]
  textconv = sops -d

[user]
  email = lucas@saboya.pro
  name = Lucas do Amaral Saboya
  signingkey = 1366C0C0
  useConfigOnly = true

[credential]
  helper = osxkeychain
[init]
  defaultBranch = main
